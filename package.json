{
  "name": "triggermate",
  "displayName": "TriggerMate",
  "description": "Automates tasks based on file updates.",
  "publisher": "tobiaswust",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TriggerMate",
      "properties": {
        "triggerMate.packagesToNotify": {
          "type": "array",
          "description": "List of files to watch and commands to run when they change.",
          "items": {
            "type": "object",
            "properties": {
              "file": {
                "type": "string",
                "description": "The relative path of the file to watch."
              },
              "command": {
                "type": "string",
                "description": "The command to run when the file changes."
              }
            }
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
